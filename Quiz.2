    //배열릐 길이와 숫자들을 입력받는 코드
		Scanner Input = new Scanner(System.in);
		System.out.println("배열에 길이를 정해주세용");
		int x = Input.nextInt();
		int[] NumArray = new int[x];
		for (int i = 0; i < NumArray.length; i++) {
			System.out.println((i+1)+"번째 자리의 숫자를 입력해주세요");
			NumArray[i] = Input.nextInt();
		}
    
    
    //각 마이너스와 플러스의 카운팅과 배열스타트를위한 변수선언
		int p=0;int m=0;
		int pc=0;int mc=0;
    //양수와 음수 카운팅
		for (int i = 0; i < NumArray.length; i++) {
			if (NumArray[i]>0) {
				pc++;
			}else if (NumArray[i]<0) {
				mc++;
			}
		}
    //각각 양수배열 음수배열 선언
		int[] Pnum = new int[pc];
		int[] Mnum = new int[mc];
		int[] NewList = new int[Pnum.length+Mnum.length];
    
    
		//배열 완성도{-5,-3,-7,1,9,2,6}
    
    //배열 정리 시작
		for (int i = 0; i < NumArray.length; i++) {
			if (NumArray[i] > 0 && pc >= p) {
				Pnum[p] =NumArray[i];
				p++;
			}else if (NumArray[i] < 0 && mc >= m) {
				Mnum[m] =NumArray[i];
				m++;
			}
		}
    //정리가 끝난 배열 합치기
